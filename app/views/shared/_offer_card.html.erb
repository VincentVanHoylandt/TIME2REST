
<div class="offer-card-container" id=<%=offer.id%>>
  <div class="offer-card-lc"></div>

  <div class="offer-card-mc">
    <h2><%= offer.job_title %></h2>
    <p> <%= offer.description.truncate(300, separator: ' ') %> </p>
  </div>

  <div class="offer-card-rc">
    <div style="margin-top: 12px;">
      <%= render partial: 'shared/avatar_small', locals: {img: offer.user.picture_url}%>
    </div>
    <div class = "rc-infos">
      <div class="rc-infos-fc">
        <i class="fa-solid fa-map-pin"></i>
        <i class="fa-solid fa-calendar-days"></i>
        <i class="fa-solid fa-euro-sign"></i>
      </div>
      <div class="rc-infos-sc">
        <p><%= offer.address %></p>
        <p><%= offer.start_time %></p>
        <p><%= offer.salary.round %></p>
      </div>
    </div>

    <% if user == offer.user %>
      <%= link_to 'Editer', edit_offer_path(offer), class: "my-btn-small"%>
    <% else %>
      <%= link_to 'DÃ©tails', "#", class: "my-btn-small", data: {action: "click->offer-modal#show", id: offer.id}%>
    <% end %>

  </div>

</div>

