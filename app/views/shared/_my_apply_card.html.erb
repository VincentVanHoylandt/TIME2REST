<div class="my-apply-container">

  <div class="ac-lc"> </div>

  <div class="ac-rc">
    <h3><%= offer.job_title %></h3>
    <div class="name-container">
      <p><%= user.first_name %></p>
      <p><%= user.last_name %></p>
    </div>
    <p>Rémunération : <%= offer.salary %></p>
    <div class="date-container">
      <p>Du <%= offer.start_time.strftime("%d/%m/%Y") %></p>
      <p> au <%= offer.end_time.strftime("%d/%m/%Y") %></p>
    </div>
    <p style="margin-bottom: 10px">Ville : lille</p>
    <%= link_to 'Annuler', offer_appliance_path(offer.id, appliance.id), data:{turbo_method: :delete}, class: "my-btn-small" %>
  </div>
</div>
