        <i class="fa-solid fa-bars" style = "margin: 0 9px"></i>
      <%end%>

      <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete} %>

    <% else %>
      <%= link_to 'New Offer', new_user_session_path, class: "my-btn" %>
      <%= link_to new_user_session_path, class:"my-dashboard-btn" do  %>
        <i class="fa-solid fa-bars" style = "margin: 0 9px"></i>
      <%end%>
