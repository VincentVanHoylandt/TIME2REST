  <div class = "logo-main-container d-flex" >

    <div class="logo-container">
    </div>

    <div class="logo-sentence-container", style = "margin: auto 0">
      <h1 class= "logo-sentence">Time2Rest</h1>
    </div>

  </div>

  <%= render partial: 'shared/search_bar', locals: {path: offers_path} %>

