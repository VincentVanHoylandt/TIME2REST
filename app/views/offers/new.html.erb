  <div class= "container-global-new-page">
  <div class= "container-advices-new-page">
    <div class="advices-new-page"   data-controller="quote">
      <h2>Quelques conseils pour ameliorer votre annonce</h2><br>

      <div id= "contrainer-quotes">
        <div id="outputQuotes" data-quote-target="outputQuotes">Suivez ces conseils pour avoir une annonce au top !</div>
        <button id= "button-quotes" data-action= "click->quote#generateQuote">Press for a new quote</button>
      </div>
    </div>
  </div>
  <div class="container-form-new-page">
    <h2>Creer une nouvelle offre :</h2> <br>
    <%= simple_form_for @offer, html: {class: 'testtest'} do |f| %>

      <div>
        <%= label_tag "Intitule de la mission :"  %>
        <%= f.text_area :job_title, size: "100x2", class: "form-input-background-color" %>
      </div>

      <div>
        <%= label_tag "Localisation :" %>
        <%= f.text_area :address, size: "100x2", class: "form-input-background-color" %>
      </div>

      <div>
        <%= label_tag "Description :" %>
        <%= f.text_area :description, size: "100x8", class: "form-input-background-color-description" %>
      </div>

      <div class= "container-salary-and-dates-new-page">
        <%= label_tag "Salaire journalier en euros :" %>
        <%= f.text_area :salary, size: "25x2", class: "form-input-background-color" %>
        <%= f.input :start_time, as: :string, placeholder: "Dates :", label: false, input_html: { data: { controller: "flatpickr" }, style: "width: 30vh; height: 4em;"} %>
      </div>

      <div class="container mt-5 text-center">
        <%= f.submit :Soumettre, class: "my-btn-small", style: "margin-top : 5px"%>
      </div>
    <% end %>
  </div>
</div>
