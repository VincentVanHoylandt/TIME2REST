


<div class='content' data-controller="hero" data-action="scroll@window->hero#fixNavbar">
  <%= render "shared/navbar" %>
  <div id="landing_illustation" data-hero-target= "image">
    <div id="landing_fader">
      <div class="landing_info">
        <h2> Find someone to take care of your buisness</h2>
        <h1 id="landing_logo">Time2Rest</h1>
            <div class='arrow_bounce' data-action="click->hero#scroll">

                <div class="arrow_anim">
                  <i class="fa-solid fa-chevron-down"></i>
                </div>

            </div>
      </div>
    </div>
  </div>



  <%# ====================== FILTRES PY ===========================%>
  <%# ---- filtres par category ---- %>
  <%# ==== Attention, rajouter une ancre ======%>
  <div class="container">
    <div class="landing-filters text-center mt-5" id='scroll-filter'>
      <%= link_to root_path(anchor: "scroll-filter", params: {job_title: "infirmier"}) do %>
        <div>
          <i class="fa-solid fa-notes-medical filters-picto"></i>
          <p>infirmier</p>
        </div>
      <% end %>

      <%= link_to root_path(params: {job_title: "informatique"}) do %>
        <div>
          <i class="fa-solid fa-computer filters-picto"></i>
          <p>informatique</p>
        </div>
      <% end %>

      <%= link_to root_path(params: {job_title: "dÃ©veloppeur"}) do %>
        <div>
          <i class="fa-solid fa-house filters-picto"></i>
          <p>etc...</p>
        </div>
      <% end %>

    </div>
  </div>
  <%# ================= FIN FILTRES PY ===========================%>


  <div class='landing_container' >
    <div data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
      class='map_landing'
      data-hero-target= "map">
    </div>
      <div class='index-cards-column' id='scroll_down'>
        <% @offers.each do |offer| %>
          <div data-controller="offer-modal">
            <% if @user != offer.user %>
              <%= render partial: 'shared/offer_card', locals: { offer: offer, user: @user }%>
              <%= render partial: 'shared/offer_show', locals: { offer: offer }%>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
