
<h1>Offers#index</h1>

<div id="landing_illustation">
 <div id="landing_fader">
  <div class="landing_info">
    <h2> Find someone to take care of your buisness</h2>
    <h1 id="landing_logo">Time2Rest</h1>
    <div class="arrow_bounce">
      <i class="fa-solid fa-chevron-down"></i>
    </div>
  </div>
 </div>

<div class='landing_container'>
  <div class='map_landing'></div>
  <div class='index-cards-column'>
    <% @offers.each do |offer| %>
    <%= render partial: 'shared/offer_card', locals: {
                                                      titre: offer.job_title,
                                                      description: offer.description,
                                                      avatar: 'item3',
                                                      location: 'Lille',
                                                      date: offer.start_time,
                                                      salary: offer.salary,}
    %>
    <% end %>
  </div>
</div>



</div>
